#Just a simple program I made to solve my math homework
import math
love = 0
while love == 0:
    print("Are you trying to find: Sine, Cosine, Tangent, or Cotangent?")
    uInput = input(":")
    if uInput.lower() == "sine":
      print("What is your first number? ")
      x =input(":")
      print("What is your second number? ")
      y = input(":")
      Sine = math.sin(int(x)/int(y))
      print(Sine)
      print ("Do you need to find the cosecant? Y or N")
      uInput = input(":")
      if uInput.lower() == "Y":
        Cosecant = math.csc(1/int(Sine))
        print (Cosecant)
      if uInput.lower() == "N":
        print("Alright see ya later")

    if uInput.lower() == "cosine":
      print("What is your first number? ")
      x = input(":")
      print("What is your second number? ")
      y = input(":")
      Cosine = math.cos(int(x)/int(y))
      print(Cosine)
      print ("Do you need to find the secant? Y or N")
      uInput = input(":")
      if uInput.lower() == "Y":
        Secant = math.sec(1/int(Cosine))
        print(Secant)
      if uInput.lower() == "N":
        print ("Alright see ya later")

      if uInput.lower() == "tangent":
        print("What is your first number? ")
        x = input(":")
        print("What is your second number? ")
        y = input(":")
        Tangent = math.tan(int(x)/int(y))
        print(Tangent)

      if uInput.lower() == "cotangent":
        print("First we need to find the sine.")
        print("What is your first number? ")
        x = input(":")
        print("What is your second number? ")
        y = input(":")
        Sine = math.sin(int(x)/int(y))
        print(Sine)
        print("Now we need to find cosine")
        print ("what is your first number? ")
        w = input(":")
        print ("What is your second number? ")
        z = input(":")
        Cosine = math.cos(int(w)/int(z))
        print(Cosine)
        Cotangent = math.cot(int(Cosine)/int(Sine))
        print(Cotangent)
        print("Have a nice day")
